<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:text=""/>

        <ListView
            android:id="@+id/favorite_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:divider="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TopNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_style"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/sort_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#0fff"
            android:src="@drawable/tag11"/>

        <ImageButton
            android:id="@+id/sort_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#0fff"
            android:src="@drawable/tag21"/>

        <ImageButton
            android:id="@+id/sort_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#0fff"
            android:src="@drawable/tag31"/>

        <ImageButton
            android:id="@+id/sort_tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#0fff"
            android:src="@drawable/tag41"/>
    </LinearLayout>

</FrameLayout>