<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MypageRegistFragment2">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <TextView
            android:id="@+id/tagname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:src="@drawable/back"/>


        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tagname"
            android:text="TYPE"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/tops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/bottoms"
            android:background="#00000000"
            android:src="@drawable/ttopsb"/>

        <ImageButton
            android:id="@+id/bottoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tops"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/bottomb"/>

        <ImageButton
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tops"
            android:layout_toRightOf="@+id/bottoms"
            android:background="#00000000"
            android:src="@drawable/shoesb"/>


        <ImageButton
            android:id="@+id/outer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tops"
            android:layout_alignLeft="@+id/tops"
            android:layout_toLeftOf="@+id/bag"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:src="@drawable/outerb"/>

        <ImageButton
            android:id="@+id/bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/outer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/bagb"
        />

        <ImageButton
            android:id="@+id/accessory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/outer"
            android:layout_toRightOf="@+id/bag"
            android:background="#00000000"
            android:src="@drawable/accessoryb"/>


        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/outer"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="SIZE"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size"
            android:layout_toLeftOf="@+id/s"
            android:background="#00000000"
            android:src="@drawable/fb"/>

        <ImageButton
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/f"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/m"
            android:background="#00000000"
            android:src="@drawable/sb"/>

        <ImageButton
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/f"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:src="@drawable/mb"/>

        <ImageButton
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/f"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/m"
            android:background="#00000000"
            android:src="@drawable/lb"/>

        <ImageButton
            android:id="@+id/xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/f"
            android:layout_toRightOf="@+id/l"
            android:background="#00000000"
            android:src="@drawable/xlb"/>

        <TextView
            android:id="@+id/brands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="BRANDS"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/brands_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brands"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brands_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="PRICE"
            android:textSize="15sp"/>


        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"/>
        <!--
        <SeekBar
            android:id="@+id/energy_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/price"
            android:max="100"
            android:progress="100" />
            -->


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>