<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_picture"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginHorizontal="32dp"
            android:scaleType="fitCenter"
            android:src="#00000000"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:text="Explanation of coordinates"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/my_picture"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tags"
            android:layout_width="96dp"
            android:layout_height="256dp"
            android:background="#0fff"
            app:layout_constraintTop_toTopOf="@id/my_picture"
            app:layout_constraintBottom_toBottomOf="@id/my_picture"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintLeft_toLeftOf="@id/my_picture"
            app:layout_constraintRight_toRightOf="@id/my_picture"
            app:layout_constraintHorizontal_bias="0.95">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag1"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.09"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag2"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag3"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.61"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag4"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.86"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>