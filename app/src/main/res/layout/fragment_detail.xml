<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageButton
            android:id="@+id/top_clap"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.15"/>

        <TextView
            android:id="@+id/text_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="height"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <ImageView
            android:id="@+id/detail_picture"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginHorizontal="32dp"
            android:scaleType="fitCenter"
            android:src="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:text="Explanation of coordinates"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/detail_picture"/>

        <ImageButton
            android:id="@+id/middle_clap"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:background="#0fff"
            app:layout_constraintTop_toBottomOf="@id/detail_picture"
            app:layout_constraintBottom_toBottomOf="@id/detail_picture"
            app:layout_constraintLeft_toLeftOf="@id/detail_picture"
            app:layout_constraintRight_toRightOf="@id/detail_picture"
            app:layout_constraintHorizontal_bias="0.95"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tags"
            android:layout_width="96dp"
            android:layout_height="256dp"
            android:background="#0fff"
            app:layout_constraintTop_toTopOf="@id/detail_picture"
            app:layout_constraintBottom_toBottomOf="@id/detail_picture"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintLeft_toLeftOf="@id/detail_picture"
            app:layout_constraintRight_toRightOf="@id/detail_picture"
            app:layout_constraintHorizontal_bias="0.95">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag1"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.09"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag2"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag3"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.61"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags"/>

            <TextView
                android:id="@+id/tag4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tag4"
                android:textSize="16sp"
                android:background="#fff"
                app:layout_constraintTop_toTopOf="@+id/tags"
                app:layout_constraintBottom_toBottomOf="@id/tags"
                app:layout_constraintVertical_bias="0.86"
                app:layout_constraintLeft_toLeftOf="@+id/tags"
                app:layout_constraintRight_toRightOf="@+id/tags" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>