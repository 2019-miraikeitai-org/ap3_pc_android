<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MypageRegistFragment1">



        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/picture"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:scaleType="center"
                    android:src="@drawable/codew0"/>


            <ImageView
                    android:id="@+id/speechballoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="162dp"
                    android:src="@drawable/speechballoon"/>


            <ImageButton
                    android:id="@+id/tag1_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="45dp"
                    android:background="#00000000"
                    android:src="@drawable/tag1"/>

            <ImageButton
                    android:id="@+id/tag2_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tag1_before"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tag1_before"
                    android:background="#00000000"
                    android:src="@drawable/tag2"/>

            <ImageButton
                    android:id="@+id/tag3_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tag1_before"
                    android:layout_alignLeft="@+id/tag1_before"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:src="@drawable/tag3"/>

            <ImageButton
                    android:id="@+id/tag4_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tag3_before"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tag3_before"
                    android:background="#00000000"
                    android:src="@drawable/tag4"/>

            <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:text="コーディネートのポイント"
                    android:textSize="15sp"/>

            <EditText
                    android:id="@+id/edit_text"
                    android:layout_below="@id/text"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />


            <ImageButton
                    android:id="@+id/draft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="500dp"
                    android:background="#00000000"
                    android:src="@drawable/draftbutton"/>


            <ImageButton
                    android:id="@+id/regist_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="500dp"
                    android:layout_toRightOf="@+id/draft"
                    android:background="#00000000"
                    android:src="@drawable/regist"/>



        </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>