<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/list_item_photo"
        android:layout_width="248dp"
        android:layout_height="328dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:background="@drawable/shape_rounded_corner_10dp"
        android:src="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_content"
        android:layout_width="160dp"
        android:layout_height="226dp"
        android:padding="8dp"
        android:background="@drawable/shape_rounded_corner_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9">

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintTop_toTopOf="@id/list_item_content"
            app:layout_constraintLeft_toLeftOf="@id/list_item_content"/>

        <TextView
            android:id="@+id/list_item_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="height"
            app:layout_constraintTop_toTopOf="@id/list_item_content"
            app:layout_constraintLeft_toLeftOf="@id/list_item_content"
            app:layout_constraintRight_toRightOf="@id/list_item_content"
            app:layout_constraintHorizontal_bias="0.6"/>

        <TextView
            android:id="@+id/list_item_text"
            android:layout_width="144dp"
            android:layout_height="192dp"
            android:text="text"
            app:layout_constraintTop_toBottomOf="@id/list_item_name"
            app:layout_constraintBottom_toBottomOf="@id/list_item_content"
            app:layout_constraintLeft_toLeftOf="@id/list_item_content"
            app:layout_constraintRight_toRightOf="@id/list_item_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
